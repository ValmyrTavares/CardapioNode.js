            <th>Prato</th>
            <th>Categoria</th>
            <th>Excluir</th>
            <th>Editar</th>
        </tr>
        <%  produtos.forEach(item=>{ %>
            <tr>
                <td><%=item.title %></td>
                <td><%=item.category %></td>
                <td> <a href="/teste/<%=item.id %>" ><button>Editar</button></a>  </td>
                <td> 
                     <form method="POST" action="/admin/delete" >
                        <input type="hidden" name="id" value="<%=item.id%>">
                        <button type="submit" >Deletar</button>      
                    </form>
                </td>
            </tr>
        <%})%>
    </table>

